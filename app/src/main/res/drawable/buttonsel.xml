<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#909090" android:startColor="#c0c0c0" />

            <stroke android:width="3dp" android:color="#ffffff" />

            <corners android:radius="8dp" />
        </shape></item>
    <item><inset android:insetBottom="2dp" android:insetLeft="2dp" android:insetRight="2dp" android:insetTop="2dp">
            <shape>
                <gradient android:angle="270" android:endColor="#606060" android:startColor="#a0a0a0" />

                <stroke android:width="2dp" android:color="#e0e0e0" />

                <corners android:radius="8dp" />
            </shape>
        </inset></item>

</selector>